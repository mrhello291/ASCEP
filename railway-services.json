{
  "services": {
    "ascep-backend": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "cd backend && python app.py",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "environments": {
        "production": {
          "variables": {
            "DEBUG": "False",
            "PORT": "5000"
          }
        }
      }
    },
    "ascep-price-feeds": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "cd services/price_feeds && python price_feed_service.py",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "environments": {
        "production": {
          "variables": {
            "RAILWAY_STATIC_URL": "https://ascep-backend-production.up.railway.app"
          }
        }
      }
    }
  }
} 